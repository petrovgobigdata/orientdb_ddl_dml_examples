cd $ORIENTDB_HOME/bin
sudo ./console.sh

CREATE DATABASE PLOCAL:/u01/orientdb/databases/yptest yptest yptest PLOCAL GRAPH
CREATE DATABASE PLOCAL:/u01/orientdb/databases/yptest_graph yptest yptest PLOCAL GRAPH

--Connect to server
CONNECT REMOTE:localhost admin admin_password

--Connect to database
--one user access
CONNECT PLOCAL:/u01/orientdb/databases/yptest admin admin
--multiple access
CONNECT REMOTE:localhost/yptest admin admin

--User List
SELECT RID, name, status FROM OUser
SELECT FROM ORole

--Add user
INSERT INTO OUser SET name = 'yptest', password = 'yptest', status = 'ACTIVE', roles = (SELECT FROM ORole WHERE name = 'admin')
